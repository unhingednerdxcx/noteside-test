{
    "ATmega328P":{
        "manufacturer": "Microchip",
        "suggested_baud_rate": 115200,
        "file_format": "hex",
        "programming_protocol": "UART",
        "voltage_range": "1.8V - 5.5V",
        "flash_size": "32KB",
        "ram_size": "2KB",
        "upload_command": "avrdude -p atmega328p -c arduino -P {port} -b 115200 -D -U flash:w:{file}:i",
        "notes": "Common in Arduino Uno, requires optiboot bootloader"
    },


    "ESP32": {
        "manufacturer": "Espressif",
        "suggested_baud_rate": 921600,
        "file_format": "bin",
        "programming_protocol": "UART",
        "voltage_range": "2.7V - 3.6V",
        "flash_size": "4MB",
        "ram_size": "520KB",
        "upload_command": "esptool.py --chip esp32 --port {port} --baud 921600 write_flash 0x10000 {file}",
        "notes": "Requires partition table and bootloader flashed separately"
    },


    "STM32F103C8T6": {
        "manufacturer": "STMicroelectronics",
        "suggested_baud_rate": 115200,
        "file_format": "hex",
        "programming_protocol": "UART/DFU",
        "voltage_range": "2.0V - 3.6V",
        "flash_size": "64KB",
        "ram_size": "20KB",
        "upload_command": "stm32flash -w {file} -v -g 0x0 {port}",
        "notes": "For DFU mode: dfu-util -a 0 -s 0x08000000:leave -D {file}"
    },


    "RP2040": {
        "manufacturer": "Raspberry Pi",
        "suggested_baud_rate": 115200,
        "file_format": "uf2",
        "programming_protocol": "USB Mass Storage",
        "voltage_range": "1.8V - 3.3V",
        "flash_size": "2MB",
        "ram_size": "264KB",
        "upload_command": "cp {file} /media/$(whoami)/RPI-RP2/",
        "notes": "Drag-and-drop to mounted volume, no command needed if using GUI"
    },


    "nRF52840": {
        "manufacturer": "Nordic Semiconductor",
        "suggested_baud_rate": 1000000,
        "file_format": "hex",
        "programming_protocol": "UART/SWD",
        "voltage_range": "1.7V - 3.6V",
        "flash_size": "1MB",
        "ram_size": "256KB",
        "upload_command": "nrfjprog --program {file} --chiperase --verify",
        "notes": "Requires Segger J-Link, for Arduino: bossac -p {port} -U -e -w -v {file} -R"
    },


    "PIC16F877A": {
        "manufacturer": "Microchip",
        "suggested_baud_rate": 9600,
        "file_format": "hex",
        "programming_protocol": "ICSP",
        "voltage_range": "2.0V - 5.5V",
        "flash_size": "14KB",
        "ram_size": "368B",
        "upload_command": "pk2cmd -PPIC16F877A -M -F{file} -T",
        "notes": "Requires PICKIT programmer, replace {port} with USB device ID"
    },


    "SAMD21G18A": {
        "manufacturer": "Microchip",
        "suggested_baud_rate": 115200,
        "file_format": "bin",
        "programming_protocol": "UART/USB",
        "voltage_range": "1.62V - 3.63V",
        "flash_size": "256KB",
        "ram_size": "32KB",
        "upload_command": "bossac -p {port} -U -e -w -v -b {file} -R",
        "notes": "For Arduino Zero/M0, requires double-tap reset"
    },


    "Teensy 4.1": {
        "manufacturer": "PJRC",
        "suggested_baud_rate": 115200,
        "file_format": "hex",
        "programming_protocol": "USB HID",
        "voltage_range": "3.3V",
        "flash_size": "8MB",
        "ram_size": "1024KB",
        "upload_command": "teensy_loader_cli --mcu=imxrt1062 -p {port} -w -v {file}",
        "notes": "Requires manual button press or auto-reboot support"
    },


    "ESP8266": {
        "manufacturer": "Espressif",
        "suggested_baud_rate": 115200,
        "file_format": "bin",
        "programming_protocol": "UART",
        "voltage_range": "1.7V - 3.6V",
        "flash_size": "4MB",
        "ram_size": "80KB",
        "upload_command": "esptool.py --chip esp8266 --port {port} --baud 115200 write_flash 0x0 {file}",
        "notes": "Requires GPIO0 pulled low during reset"
    },


    "STM32H743VI": {
        "manufacturer": "STMicroelectronics",
        "suggested_baud_rate": 115200,
        "file_format": "hex",
        "programming_protocol": "UART/DFU/SWD",
        "voltage_range": "1.62V - 3.6V",
        "flash_size": "2MB",
        "ram_size": "1MB",
        "upload_command": "openocd -f interface/stlink.cfg -f target/stm32h7x.cfg -c \"program {file} verify reset exit\"",
        "notes": "Requires ST-Link programmer, for DFU: dfu-util -a 0 -s 0x08000000:leave -D {file}"
    },


    "MSP430G2553": {
        "manufacturer": "Texas Instruments",
        "suggested_baud_rate": 9600,
        "file_format": "txt",
        "programming_protocol": "Spy-Bi-Wire",
        "voltage_range": "1.8V - 3.6V",
        "flash_size": "16KB",
        "ram_size": "512B",
        "upload_command": "mspdebug tilib \"prog {file}\"",
        "notes": "Requires MSP-FET430UIF programmer"
    },


    "IMXRT1062": {
        "manufacturer": "NXP",
        "suggested_baud_rate": 115200,
        "file_format": "hex",
        "programming_protocol": "USB HID",
        "voltage_range": "3.3V",
        "flash_size": "8MB",
        "ram_size": "1MB",
        "upload_command": "teensy_loader_cli --mcu=imxrt1062 -p {port} -w -v {file}",
        "notes": "Used in Teensy 4.x, requires Teensyduino loader"
    }

}